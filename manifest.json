{
    "manifest_version": 3,
    "name": "ToS Summarizer",
    "version": "1.0",
    "description": "Summarizes Terms of Service and Privacy Policies.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://openrouter.ai/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],

    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }

  }
  